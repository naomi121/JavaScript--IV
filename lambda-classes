    name: "David Thomas",

    age: 25,

    location: "Queens",

    gender: "Male",

    specialty: "Software Engineering",

    favLanguage: "Css",

    catchPhrase: "Live Long And Prosper!",

    gradClassName: "CS",

    favInstructor: "Brit",

});



